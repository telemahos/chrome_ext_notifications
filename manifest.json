{
    "manifest_version": 3,
    "name": "Global entry drops",
    "version": "0.1.1",
    "description": "Global entry drops",
    "permissions": ["storage", "activeTab", "scripting", "alarms"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}

